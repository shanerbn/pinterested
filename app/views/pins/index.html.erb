<div class="panel panel-default">
  <div class="panel-heading"><h1>Listing pins</h1>
  </div>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div class="form-group">
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-success' %></td>
        <% if pin.user == current_user %>
             <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', pin, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>

<br>

<div class="panel-footer"><%= link_to 'New Pin', new_pin_path %>
</div>